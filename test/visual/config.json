{
  "elements": [
    "my-component",
    "my-componentx"
  ],
  "puppeteer": {
    "headless": true,
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--hide-scrollbars",
      "--disable-font-subpixel-positioning",
      "--font-render-hinting none",
      "--disable-composited-antialiasing"
    ]
  },
  "viewports": {
    "tablet": {
      "width": 768,
      "height": 1024
    },
    "phone": {
      "width": 415,
      "height": 666
    }
  }
}
