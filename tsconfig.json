  "compilerOptions": {
    "sourceMap": true,
    "removeComments": true,
    
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitHelpers": true,
    "importHelpers": true,
